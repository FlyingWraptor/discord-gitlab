{
  "application": {
      "debug": false
  },
  "bot": {
    "nickname": "James",
    "credentials": {
      "id": "The 'Client ID' created at https://discordapp.com/developers/applications/me",
      "token": "The 'App Bot User Token' created at https://discordapp.com/developers/applications/me when you make a Bot User application"
    },
    "master_user_id": "Right-click > Copy ID in Discord [Dev Mode] of the user that is allowed to disconnect this bot",
    "debug_channel_id": "Right-click > Copy ID in Discord [Dev Mode] of the channel you want to send error reports to. You MUST give the bot permission to send messages in this channel."
  },
  "filters": {
    "confidential": false,
    "hyperlinks": true
  },
  "listener": {
    "address": "::",
    "port": 8000,

    "access_tokens": {
      "(gitlab secret token, easy-generate one with generatetoken.js)": {
        "gitlabs": [
          "*",
          "gitlab.domain.tld"
        ],
        "webhooks": [
          "*",
          "someidentifier"
        ],
        "paths": [
          "*",
          "namespace/*",
          "namespace/project"
        ],
        "filters": {
          "confidential": false,
          "hyperlinks": true
        },
        "events": {
          "issues": [
            "* or updated/opened/closed/comment"
          ]
        },
        "templates": {
          "issues": {
            "updated": "./templates/issues/updated.txt",
            "opened": "./templates/issues/opened.txt",
            "closed": "./templates/issues/closed.txt"
          }
        }
      }
    }
  },
  "webhooks": {
    "someidentifier": {
      "name": "Hook name",
      "image_url": "image url",
      "credentials": {
        "id": "{ID} FROM https://discordapp.com/api/webhooks/{ID}/{TOKEN} which is generated when you create a webhook in Discord",
        "token": "{TOKEN} FROM https://discordapp.com/api/webhooks/{ID}/{TOKEN}"
      }
    }
  }
}